{% extends 'base.html.twig' %}

{% block body %}
    <h1>Personne list</h1>

    <div class="table-responsive">
        <table id="personneDataTable" class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Birthdate</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Website</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for personne in personnes %}
                <tr>
                    <td><a href="{{ path('personne_show', { 'id': personne.id }) }}">{{ personne.id }}</a></td>
                    <td>{{ personne.firstname }}</td>
                    <td>{{ personne.lastname }}</td>
                    <td>{% if personne.birthDate %}{{ personne.birthDate|date('Y-m-d') }}{% endif %}</td>
                    <td>{{ personne.email }}</td>
                    <td>{{ personne.telephone }}</td>
                    <td><a href="{{ personne.webSite }}">{{ personne.webSite }}</a></td>
                    <td>{% if personne.status == 1 %} Particulier {% endif %}{% if personne.status == 2 %} Professionnel {% endif %}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('personne_show', { 'id': personne.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('personne_edit', { 'id': personne.id }) }}">edit</a>
                            </li>
                            <li>
                                <a href="{{ path('personne_delete', { 'id': personne.id }) }}">delete</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="col-md-12 col-sm-12 col-xs-12">
        <ul>
            <li>
                <a href="/">Index</a>
            </li>
            <li>
                <a href="{{ path('personne_new') }}">Create</a>
            </li>
        </ul>
    </div>
    <script type="application/javascript">
        $(document).ready(function(){
            $('#personneDataTable').DataTable();
        });
    </script>
{% endblock %}
